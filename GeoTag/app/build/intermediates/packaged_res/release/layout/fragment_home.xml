<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="392dp"
                android:layout_height="411dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:contentDescription="@string/formatted_image"
                android:foregroundGravity="center_horizontal"
                android:src="@drawable/baseline_image_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/invertDimen"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/Portrait"
                    android:textAlignment="viewStart"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnRefresh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:contentDescription="@string/refresh_button"
                    android:onClick="setBtnRefresh"
                    android:src="@drawable/refresh_button" />

            </LinearLayout>

            <EditText
                android:id="@+id/ETtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="101dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:ems="10"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="@string/enter_palri_up_etc"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:text="@string/palri_uttar_pradesh_india" />

            <EditText
                android:id="@+id/ETtext1"
                android:layout_width="366dp"
                android:layout_height="128dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:autofillHints=""
                android:ems="10"
                android:foregroundGravity="center_horizontal"
                android:gravity="center|start|center_horizontal|top"
                android:hint="@string/enter_other_details"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:text='@string/text1' />

            <Button
                android:id="@+id/button"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:width="150dp"
                android:foregroundGravity="center|center_horizontal"
                android:gravity="center|center_horizontal"
                android:text="@string/choose_image" />

            <Button
                android:id="@+id/BTNsaveImage"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:width="150dp"
                android:foregroundGravity="center|center_horizontal"
                android:gravity="center|center_horizontal"
                android:text="@string/save_image" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>